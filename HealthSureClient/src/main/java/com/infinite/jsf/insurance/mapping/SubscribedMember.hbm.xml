<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.infinite.jsf.insurance.model.SubscribedMember" table="SubscribedMember">
        <id name="recipientId" column="recipient_id" type="string">
            <generator class="assigned"/>
        </id>

        <!-- Use fully qualified class name for Subscription -->
        <many-to-one name="subscription" class="com.infinite.jsf.insurance.model.Subscription" column="subscription_id" not-null="false"/>

        <property name="fullName" column="full_name" type="string"/>
        <property name="age" column="age" type="integer"/>
        <property name="gender" column="gender" type="string"/> <!-- maps enum as string -->
        <property name="relationWithProposer" column="relation_with_proposer" type="string"/>
        <property name="aadharNo" column="aadhar_no" type="string"/>
    </class>
</hibernate-mapping>
